{
  "name": "Customizable block text style",
  "description": "Allows you to make a few adjustments to block text to make it easier to read.",
  "tags": ["editor", "codeEditor", "featured"],
  "credits": [
    {
      "name": "Secret-chest",
      "link": "https://github.com/Secret-chest"
    },
    {
      "name": "_nix",
      "link": "https://github.com/towerofnix"
    },
    {
      "name": "DNin01",
      "link": "https://github.com/DNin01"
    }
  ],
  "userstyles": [
    {
      "url": "text-bold.css",
      "matches": ["projects"],
      "if": { "settings": { "bold": true } }
    },
    {
      "url": "text-shadow.css",
      "matches": ["projects"],
      "if": { "settings": { "shadow": true } }
    },
    {
      "url": "text-large.css",
      "matches": ["projects"],
      "if": { "settings": { "large": true } }
    }
  ],
  "settings": [
    {
      "name": "Bold text",
      "id": "bold",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Shadow under text",
      "id": "shadow",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Large text",
      "id": "large",
      "type": "boolean",
      "default": false
    },
    {
      "name": "Text size",
      "id": "size",
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 3,
      "if": { "settings": { "large": true }}
    }
  ],
  "dynamicEnable": true,
  "dynamicDisable": true,
  "updateUserstylesOnSettingsChange": true,
  "versionAdded": "1.24.0",
  "latestUpdate": {
    "version": "1.32.0",
    "newSettings": ["large"]
  },
  "enabledByDefault": false
}
